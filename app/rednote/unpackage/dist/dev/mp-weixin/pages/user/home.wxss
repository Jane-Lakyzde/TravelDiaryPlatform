  margin-right: 28rpx;
  color: #666;
}
.sidebar-bottom {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  background: #f7f8fa;
  padding: 24rpx 0 32rpx 0;
  border-top: 1rpx solid #eee;
}
.sidebar-bottom-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}
.sidebar-bottom-item .iconfont {
